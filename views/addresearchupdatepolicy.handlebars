{{!-- <div class="container"> --}}
<div>
    <h3 class="text-center">{{user.username}}</h3>
</div>
<div class="bs-example bs-example-tabs" data-example-id="togglable-tabs"> 
    <ul id="myTabs" class="nav nav-tabs" role="tablist"> 
        <li role="presentation" class="active">
            <a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true"> <h4 class="text-center">Policy</h4></a></li>
        <div class="logout_btn">
            <a class="new_logout" href="/logout">Log-out</a>
            <a class="new_logout" href="/addresearch">Home</a>
        </div>
    </ul>          
</div> 
{{#if error}}
<div class="alert alert-danger">{{error}}</div>
{{/if}}
<div class="smart-container" >

    <div class="col-sm-8">
        <div class="main-content">  
            <div class="tab-content" id="myTabContent">
                <div role="tabpanel" class="tab-pane fade active in" id="home" aria-labelledby="home-tab"> 
                    <form class="form-horizontal" action="/addresearchupdatepolicy" method="post" role="form">
                        <div class="form-group">
                            <label class="control-label col-lg-4" for="policy">Name</label>
                            <div class="col-lg-8">
                                <input type="text" name="policyname" class="form-control" value="{{result.sldata.policyname}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" for="policy">Text</label>
                            <div class="col-lg-8">
                                  <textarea name="policytext" class="form-control">{{result.sldata.policytext}}</textarea>
                                <input type="hidden" name="id" class="form-control" value="{{result.sldata._id}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" for="text">Select Legislation</label>
                            <div class="col-lg-8">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p>Choose Relevant Legislation</p>
                                        <select class="form-control" name="legislation" multiple="multiple">                                           
                                            {{#each result.ldata}}
                                            <option value="{{_id}}">{{mainheading}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="col-sm-6">
                                        <p>Already Selected Relevant Legislation</p>
                                        <select class="form-control"  multiple="multiple">                                    
                                            {{#each result.selectdata}}
                                            <option selected>{{this}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div></div>
                        <div class="form-group">
                            <label class="control-label col-lg-4" for="text">Select Procedure</label>
                            <div class="col-lg-8">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p>Choose Relevant Procedure</p>
                                        <select class="form-control" name="procedure"  multiple="multiple"> 
                                            {{#each result.prodata}}
                                            <option  value="{{_id}}">{{procedurename}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="col-sm-6">
                                        <p>Already Selected Relevant Procedure</p>
                                        <select class="form-control"   multiple="multiple"> 
                                            {{#each result.selectprodata}}
                                            <option  selected>{{this}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="text" class="control-label col-lg-4"></label>
                            <div class="col-lg-8">
                                <button type="submit" class="btn btn-success">Update Legislation</button>
                                <button class="btn btn-success" type="button"><a href="/deletepodata/{{result.sldata._id}}" id="{{result.sldata._id}}">Delete</a></button>                   
                                <button class="btn btn-success" type="button"><a href="/genpodoc/{{result.sldata._id}}" id="{{result.sldata._id}}">Download</a></button>               
                                <button class="btn btn-danger" id="deleteemployee" type="reset">Clear</button>
                                <!--                        <button class="btn btn-danger" id="deleteemployee" data-id={{employee._id}}>Delete</button><br>-->
                            </div>             
                        </div>
                    </form>
                </div>
            </div>  
        </div>
    </div>
    <div class="col-sm-4">
        <div class="nano-content">
            <ul class="gw-nav gw-nav-list">
                <!--            <li class="init-un-active"> <a href="javascript:void(0)"> <span class="gw-menu-text">Navigation Menu</span> </a> </li>-->
                <li class="init-arrow-down"> <a href="javascript:void(0)"> <span class="gw-menu-text">Legislation</span> <b class="gw-arrow"></b> </a>
                    <ul class="gw-submenu">
                        {{#each result.ldata}}
                        <li> <a href="/updateldata/{{_id}}" id="{{_id}}">{{mainheading}}</a> </li>                 
                        {{/each}}
                    </ul>
                </li>
                <li class="init-arrow-down"> <a href="javascript:void(0)"> <span class="gw-menu-text">Policy</span> <b class="gw-arrow icon-arrow-up8"></b> </a>
                    <ul class="gw-submenu">
                        {{#each result.podata}}
                        <li> <a href="/updatepodata/{{_id}}" id="{{_id}}">{{policyname}}</a> </li>                 
                        {{/each}}
                    </ul>
                </li>
                <li class="init-arrow-down"> <a href="javascript:void(0)"> <span class="gw-menu-text">Procedure</span> <b></b> </a>
                    <ul class="gw-submenu">
                        {{#each result.prodata}}
                        <li> <a href="/updateprodata/{{_id}}" id="{{_id}}">{{procedurename}}</a> </li>                 
                        {{/each}}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>