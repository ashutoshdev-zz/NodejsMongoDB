{{!-- <div class="container"> --}}
<div>
    <h3 class="text-center">{{user.username}}</h3>
</div>

{{#if error}}
<div class="alert alert-danger">{{error}}</div>
{{/if}}
<div class="smart-container" >
    <div class="page-header">
        <h1>Research Data</h1>
    </div>
    <div class="col-sm-10">
        <div class="main-content">  
            <div class="btn-toolbar list-toolbar top_btn">
                <a href="/addresearch">
                    <span class="btn btn-primary add_item_btn">
                        <i class="fa fa-plus"></i>Back
                    </span>
                </a>
            </div>
            <div class="events index">
                <table class="table table-striped table-bordered" cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if lresult}}
                        <tr>
                            <td>{{#each lresult}} {{mainheading}} {{/each}}&nbsp;</td>
                            <td class="actions"> 
                                <p>          
                                    <button class="btn btn-sm btn-info" type="button"><a href="/updateldata/{{lresult._id}}" id="{{lresult._id}}">Edit</a></button>
                                    <button class="btn btn-sm btn-info" type="button"><a href="/deleteldata/{{lresult._id}}" id="{{lresult._id}}">Delete</a></button>
                                    <button class="btn btn-sm btn-warning" type="button"><a href="/addresearchdata/{{lresult._id}}" id="{{lresult._id}}">Download</a></button>
                                </p>
                            </td>
                        </tr>  
                        {{/if}}
                        {{#if repolicy}}
                        <tr>
                            <td>{{#each repolicy}} {{policyname}} {{/each}}&nbsp;</td>
                            <td class="actions"> 
                                <p>
                               <button class="btn btn-sm btn-warning" type="button"><a href="/updatepodata/{{#each repolicy}}{{_id}}" id="{{_id}}{{/each}}">Edit</a></button>
                                    <button class="btn btn-sm btn-warning" type="button"><a href="/deletepodata/{{#each repolicy}}{{_id}}" id="{{_id}}{{/each}}">Delete</a></button>
                                    <button class="btn btn-sm btn-warning" type="button"><a href="/genpodoc/{{#each repolicy}}{{_id}}" id="{{_id}}{{/each}}">Download</a></button>
                                </p>
                            </td>
                        </tr>  
                        {{/if}}
                        {{#if resultprocedure}}
                        <tr>
                            <td>{{#each resultprocedure}} {{procedurename}} {{/each}}&nbsp;</td>
                            <td class="actions"> 
                                <p>
          <button class="btn btn-sm btn-warning" type="button"><a href="/updateprodata/{{#each resultprocedure}}{{_id}}" id="{{_id}}{{/each}}">Edit</a></button>
                                    <button class="btn btn-sm btn-warning" type="button"><a href="/deleteprodata/{{#each resultprocedure}}{{_id}}" id="{{_id}}{{/each}}">Delete</a></button>
                                    <button class="btn btn-sm btn-warning" type="button"><a href="/genprodoc/{{#each resultprocedure}}{{_id}}" id="{{_id}}{{/each}}">Download</a></button>
                                </p>
                            </td>
                        </tr>  
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>